#!/usr/bin/env bash

set -e

mkdir -p build/mcp-doc

require() {
    hash "$@" || { echo "Error: Command '$1' not found." >&2; exit 127; }
}

require curl
require unzip
require repomix

URL="https://github.com/modelcontextprotocol/modelcontextprotocol/archive/refs/heads/main.zip"
ZIP_FILE="build/mcp-doc/main.zip"
EXTRACT_DIR="build/mcp-doc"
DOCS_DIR="$EXTRACT_DIR/modelcontextprotocol-main"
OUTPUT_FILE="build/mcp-server.txt"

echo "Downloading MCP documentation..."
curl -sSL -o "$ZIP_FILE" "$URL"

echo "Extracting documentation..."
unzip -o -q "$ZIP_FILE" \
    "modelcontextprotocol-main/docs/docs/learn/server-concepts.mdx" \
    "modelcontextprotocol-main/docs/docs/learn/architecture.mdx" \
    "modelcontextprotocol-main/docs/docs/develop/build-server.mdx" \
    "modelcontextprotocol-main/docs/specification/2025-06-18/*" \
    -d "$EXTRACT_DIR"

echo "Running repomix..."
repomix "$DOCS_DIR" \
    --include="docs/docs/learn/server-concepts.mdx,docs/docs/learn/architecture.mdx,docs/docs/develop/build-server.mdx,docs/specification/2025-06-18/*" \
    --no-security-check --quiet -o "$OUTPUT_FILE"

echo "Successfully created $OUTPUT_FILE"

